<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>The Eerie Papers</title>
  </head>

  <body>
    <div class=''>
      <header class=''>
        <h1>
          <a  class="is-size-1 is-italic" href='/'>The Eerie Papers</a> {{! title }}
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a class="has-text-weight-bold" href='/dashboard'>Dashboard</a>

            <a class="has-text-weight-bold" href='/profile'>Profile</a>

            <button class='has-text-weight-light' id='logout'>logout</button>
          {{else}}
            <a class="has-text-weight-bold" href='/login'>Login or Sign-up</a>
          {{/if}}
        </nav>
      </header>
      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>